generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole {
    USER
    ADMIN
}

model Event {
    id          String   @id @default(cuid())
    title       String
    description String
    date        DateTime
    location    String
    user        User     @relation(fields: [userId], references: [id])
    userId      String
}

model User {
    id       String  @id @default(cuid())
    email    String  @unique
    name     String
    password String
    events   Event[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
